<%
	require 'nokogiri'

	entry = @header
	entry = Nokogiri::XML(entry.to_xml)

	side_data ||= @side_data
	side_data ||= nil
	entry.root << side_data_to_xml(side_data).root unless side_data.nil?

Rails.logger.debug entry

	xslt = Nokogiri::XSLT(File.read(Dir.pwd + '/app/views/dictionaries/' + 'show.html.xslt'))

	html = xslt.transform(entry).root.to_xml
%>
<%= html.html_safe %>
