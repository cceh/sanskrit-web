- dict_param = "dict=mw"
%dl.entry
  %dt.lemma{"xml:lang" => "san-Deva"}
    %a{:href => "/dict/#{result[:lemma]}?#{dict_param}"}
      %dfn
        = result[:lemma]
  - result[:transliterations].each do |method, string|
    %dt.transliteration{"xml:lang" => "san-Latn"}
      - transliterated = result[:transliterations][method]
      %a{:href => "/dict/#{transliterated}?iscript=#{method}&#{dict_param}"}
        = transliterated
  - result[:senses].each do |sense|
    %dd.sense= sense
